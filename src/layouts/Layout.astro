---
import '../styles/globals.css';
import '@fontsource-variable/inter/wght.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-gradient-to-b from-[#1e293b] to-[#0f172a] text-white font-sans">
    <!-- Header -->
    <header class="bg-[#0f172a] shadow-md">
      <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-400">
          amicbridge<span class="text-white">.com</span>
        </a>
        <nav class="space-x-6 text-lg">
          <a href="/" class="hover:text-blue-400 transition">Home</a>
          <a href="/about-us" class="hover:text-blue-400 transition">About-Us</a>
          <a href="/tokenize-asset" class="hover:text-blue-400 transition">Tokenize</a>
          <a href="/invest" class="hover:text-blue-400 transition">Invest</a>
          <a href="/contact" class="hover:text-blue-400 transition">Contact</a>
        </nav>
      </div>
    </header>

    <!-- Main content -->
    <main class="max-w-6xl mx-auto px-6 py-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-[#0f172a] text-center text-gray-400 py-6 mt-12 border-t border-gray-800">
      <p>Â© {new Date().getFullYear()} Amicbridge. All rights reserved.</p>
    </footer>
  </body>
</html>
 

 

 
