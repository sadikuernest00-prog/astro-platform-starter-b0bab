---
const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'About Us', href: '/about' },
  { linkText: 'Lending', href: '/lending' },
  { linkText: 'Borrowing', href: '/borrowing' },
  { linkText: 'Contact', href: '/contact' }
];
---

<nav class="flex flex-wrap items-center justify-between px-6 py-6 sm:px-12 bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 shadow-lg">
  <!-- Logo / Name -->
  <a href="/" class="text-3xl font-extrabold tracking-tight text-white hover:text-blue-400 transition-colors duration-300">
    amicbridge<span class="text-blue-400">.com</span>
  </a>

  <!-- Navigation -->
  {
    !!navItems?.length && (
      <ul class="flex flex-wrap items-center gap-x-8 text-lg font-medium">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-200 hover:text-white border-b-2 border-transparent hover:border-blue-400 transition-all duration-300"
            >
              {item.linkText}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</nav>
